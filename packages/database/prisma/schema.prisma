generator client {
  provider        = "prisma-client-js"
  previewFeatures = ["driverAdapters"]
}

datasource db {
  provider = "postgresql"
}
// Modelo de Usuário (Professores e Alunos)
model User {
  id        String    @id @default(cuid())
  name      String
  email     String    @unique
  role      Role      @default(STUDENT)
  
  // Relação: Um professor pode ter vários agendamentos
  taughtBookings Booking[] @relation("TeacherBookings")
  
  createdAt DateTime  @default(now())
  updatedAt DateTime  @updatedAt
}

model Studio {
  id             String    @id @default(cuid())
  name           String
  address        String
  contact        String
  capacity       Int
  amenities      String[]  // PostgreSQL suporta arrays de strings nativamente!
  
  // Horários de funcionamento
  opStart        String?
  opEnd          String?

  // Relação: Um estúdio tem vários agendamentos
  bookings       Booking[]

  createdAt      DateTime  @default(now())
  updatedAt      DateTime  @updatedAt
}

model Booking {
  id              String        @id @default(cuid())
  
  // Relacionamento com Studio
  studioId        String
  studio          Studio        @relation(fields: [studioId], references: [id])

  // Relacionamento com Professor (User)
  teacherId       String
  teacher         User          @relation("TeacherBookings", fields: [teacherId], references: [id])

  date            DateTime
  startTime       String
  endTime         String
  status          BookingStatus @default(PENDING)
  classType       String
  maxParticipants Int

  createdAt       DateTime      @default(now())
  updatedAt       DateTime      @updatedAt
}

// Enums para garantir que ninguém digite status errado
enum Role {
  ADMIN
  TEACHER
  STUDENT
}

enum BookingStatus {
  PENDING
  CONFIRMED
  CANCELLED
}